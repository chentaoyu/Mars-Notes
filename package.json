{
  "name": "mars-notes",
  "version": "1.1.0",
  "description": "一个简洁、高效的在线笔记应用 Mars-Notes",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "dev:legacy": "next dev",
    "build": "next build && mkdir -p .next/standalone/.next && cp -r .next/static .next/standalone/.next/",
    "start": "node start-server.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "delete:pm2": "pm2 delete ecosystem.config.js",
    "logs:pm2": "pm2 logs ecosystem.config.js",
    "status:pm2": "pm2 status ecosystem.config.js",
    "list:pm2": "pm2 list",
    "delete:all:pm2": "pm2 delete all",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "postinstall": "prisma generate && node tools/copy-vditor-assets.js",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:status": "prisma migrate status",
    "db:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.5.0",
    "@hookform/resolvers": "^3.3.4",
    "@prisma/client": "^6.18.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.363.0",
    "next": "16.0.1",
    "next-auth": "^5.0.0-beta.16",
    "prisma": "^6.18.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.51.0",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.2.2",
    "vditor": "^3.11.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.30",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@types/react-syntax-highlighter": "^15.5.11",
    "autoprefixer": "^10.4.19",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "bcrypt"
    ],
    "onlyBuiltDependencies": [
      "bcrypt"
    ],
    "overrides": {
      "@types/react": "19.2.2",
      "@types/react-dom": "19.2.2"
    }
  }
}
